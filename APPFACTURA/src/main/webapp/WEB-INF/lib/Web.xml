<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>controlador.Controlador</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ControladorRegistrar</servlet-name>
        <servlet-class>controlador.ControladorRegistrar</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ControladorRegistrar</servlet-name>
        <url-pattern>/ControladorRegistrar</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ControladorFactura</servlet-name>
        <servlet-class>controlador.ControladorFactura</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ControladorFactura</servlet-name>
        <url-pattern>/ControladorFactura</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ControladorCliente</servlet-name>
        <servlet-class>controlador.ControladorCliente</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ControladorCliente</servlet-name>
        <url-pattern>/ControladorCliente</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ControladorRegistroEmpleado</servlet-name>
        <servlet-class>controlador.ControladorRegistroEmpleado</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ControladorRegistroEmpleado</servlet-name>
        <url-pattern>/ControladorRegistroEmpleado</url-pattern>
    </servlet-mapping>
     
</web-app>
