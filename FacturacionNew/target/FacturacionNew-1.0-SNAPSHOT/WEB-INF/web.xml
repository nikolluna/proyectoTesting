    <servlet-mapping>
        <servlet-name>ControladorArticulos</servlet-name>
        <url-pattern>/ControladorArticulos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorClientes</servlet-name>
        <url-pattern>/ControladorClientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorVendedor</servlet-name>
        <url-pattern>/ControladorVendedor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
</web-app>
