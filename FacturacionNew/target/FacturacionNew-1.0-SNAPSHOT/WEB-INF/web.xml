        <servlet-name>ControladorClientes</servlet-name>
        <servlet-class>Controlador.ControladorClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorVendedor</servlet-name>
        <servlet-class>Controlador.ControladorVendedor</servlet-class>
    </servlet>
    <servlet-mapping>
